openshift_clock_enabled=true

# Registry auth needed if you're using RH's registry.
oreg_auth_user="{{ lookup('env','OREG_AUTH_USER') }}"
oreg_auth_password="{{ lookup('env','OREG_AUTH_PASSWORD') }}"

